<% content_for :title, "Songs" %>

<div class="flex flex-col gap-4">
  <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h1 class="text-2xl font-semibold text-slate-900">Songs</h1>
      <p class="text-sm text-slate-600">Your band repertoire across the account.</p>
      <p class="mt-1 text-xs text-slate-500">On larger screens you’ll also see Key, Tempo, and Streaming link columns; on mobile these collapse into the row.</p>
    </div>
    <div class="flex flex-wrap items-center gap-2">
      <%= link_to "Import", import_songs_path, class: "inline-flex items-center rounded-md border border-slate-300 px-4 py-2 text-sm font-semibold text-slate-700 hover:border-slate-400 hover:text-slate-900" %>
      <%= link_to "New song", new_song_path, class: "inline-flex items-center rounded-md bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800" %>
    </div>
  </div>

  <div class="rounded-lg border border-slate-200 bg-white p-4 shadow-sm">
    <%= form_with url: songs_path, method: :get, class: "flex flex-col gap-3 sm:flex-row sm:items-center" do |form| %>
      <%= form.text_field :q, value: @query, placeholder: "Search by title or artist", class: "w-full rounded-md border border-slate-300 px-3 py-2 text-sm sm:max-w-md" %>
      <%= form.select :tag, options_for_select([["All tags", ""]] + @tags.pluck(:name).map { |name| [name, name] }, @tag_filter), {}, class: "w-full rounded-md border border-slate-300 px-3 py-2 text-sm sm:max-w-xs" %>
      <%= form.select :sort, options_for_select([["Title", "title"], ["Artist", "artist"], ["Album", "album"], ["Tempo", "tempo"]], @sort_field), {}, class: "w-full rounded-md border border-slate-300 px-3 py-2 text-sm sm:max-w-xs" %>
      <%= form.select :direction, options_for_select([["Ascending", "asc"], ["Descending", "desc"]], @sort_direction), {}, class: "w-full rounded-md border border-slate-300 px-3 py-2 text-sm sm:max-w-xs" %>
      <%= form.submit "Search", class: "rounded-md border border-slate-300 px-3 py-2 text-sm text-slate-700 hover:border-slate-400" %>
    <% end %>
  </div>

  <div class="grid gap-4 lg:grid-cols-[minmax(0,1fr)_18rem]" data-controller="setlist-drop">
    <div>
      <% if @songs.any? %>
        <div class="divide-y divide-slate-200 rounded-lg border border-slate-200 bg-white shadow-sm">
          <% @songs.each do |song| %>
            <div class="flex flex-col gap-2 px-5 py-4 sm:flex-row sm:items-center sm:justify-between" draggable="true" data-song-id="<%= song.id %>" data-action="dragstart->setlist-drop#dragStart dragend->setlist-drop#dragEnd">
              <div>
                <p class="font-medium text-slate-900"><%= link_to song.title, song_path(song) %></p>
                <p class="text-sm text-slate-600"><%= [song.artist, song.album].compact.join(" • ").presence || "No artist info" %></p>
                <p class="text-xs uppercase tracking-wide text-slate-500"><%= song.band&.name || "Unassigned band" %></p>
                <% if song.tags.any? %>
                  <p class="mt-1 text-xs text-slate-500">Tags: <%= song.tags.order(:name).pluck(:name).join(", ") %></p>
                <% end %>
              </div>
              <div class="flex items-center gap-3 text-sm">
                <%= link_to "Edit", edit_song_path(song), class: "text-slate-700 hover:text-slate-900" %>
                <%= button_to "Delete", song_path(song), method: :delete, data: { turbo_confirm: "Delete this song?" }, class: "text-red-600 hover:text-red-700" %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="rounded-lg border border-dashed border-slate-300 bg-white px-6 py-10 text-center text-sm text-slate-600">
          No songs yet. Add your first song to start building the library.
        </div>
      <% end %>
    </div>

    <aside class="rounded-lg border border-slate-200 bg-white p-4 shadow-sm">
      <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Drag to setlist</h2>
      <% if @setlists.any? %>
        <div class="mt-4 space-y-2 text-sm">
          <% @setlists.each do |setlist| %>
            <div class="rounded-md border border-slate-200 px-3 py-2 text-slate-700" data-setlist-id="<%= setlist.id %>" data-action="dragover->setlist-drop#dragOver dragleave->setlist-drop#dragLeave drop->setlist-drop#drop">
              <p class="font-medium text-slate-900"><%= link_to setlist.title, setlist_path(setlist) %></p>
              <p class="text-xs text-slate-500"><%= setlist.band.name %></p>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="mt-3 text-sm text-slate-600">No setlists yet. Create one to start assigning songs.</p>
        <%= link_to "New setlist", new_setlist_path, class: "mt-3 inline-flex text-sm text-slate-700 underline" %>
      <% end %>
    </aside>
  </div>
</div>
