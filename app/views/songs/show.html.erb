<% content_for :title, @song.title %>

<div class="flex flex-col gap-6">
  <div class="rounded-lg border border-slate-200 bg-white p-6 shadow-sm">
    <div class="flex flex-col gap-3 sm:flex-row sm:items-start sm:justify-between">
      <div>
        <h1 class="text-2xl font-semibold text-slate-900"><%= @song.title %></h1>
        <p class="mt-2 text-sm text-slate-600"><%= [@song.artist, @song.album].compact.join(" • ").presence || "No artist info" %></p>
        <% if @song.tags.any? %>
          <p class="mt-2 text-xs text-slate-500">Tags: <%= @song.tags.order(:name).pluck(:name).join(", ") %></p>
        <% end %>
      </div>
      <div class="flex items-center gap-3 text-sm">
        <%= link_to "Edit", edit_song_path(@song), class: "rounded-md border border-slate-300 px-3 py-2 text-slate-700 hover:border-slate-400 hover:text-slate-900" %>
        <%= button_to "Delete", song_path(@song), method: :delete, data: { turbo_confirm: "Delete this song?" }, class: "rounded-md border border-red-200 px-3 py-2 text-red-600 hover:border-red-300" %>
      </div>
    </div>
  </div>

  <div class="grid gap-4 md:grid-cols-2">
    <div class="rounded-lg border border-slate-200 bg-white p-5 shadow-sm">
      <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Details</h2>
      <dl class="mt-3 space-y-2 text-sm text-slate-700">
        <div class="flex justify-between">
          <dt class="text-slate-500">Key</dt>
          <dd><%= @song.key.presence || "—" %></dd>
        </div>
        <div class="flex justify-between">
          <dt class="text-slate-500">Tempo</dt>
          <dd><%= @song.tempo.presence || "—" %></dd>
        </div>
      </dl>
    </div>
    <div class="rounded-lg border border-slate-200 bg-white p-5 shadow-sm">
      <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Notes</h2>
      <p class="mt-3 text-sm text-slate-700"><%= @song.notes.presence || "No notes yet." %></p>
    </div>
  </div>
</div>
