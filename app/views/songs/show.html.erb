<% content_for :title, @song.title %>

<div class="flex flex-col gap-6">
  <div class="rounded-lg border border-slate-200 bg-white p-6 shadow-sm">
    <div class="flex flex-col gap-3 sm:flex-row sm:items-start sm:justify-between">
      <div>
        <h1 class="text-2xl font-semibold text-slate-900"><%= @song.title %></h1>
        <p class="mt-2 text-sm text-slate-600"><%= [@song.artist, @song.album].compact.join(" • ").presence || "No artist info" %></p>
        <p class="mt-1 text-xs uppercase tracking-wide text-slate-500"><%= @song.band&.name || "Unassigned band" %></p>
        <% if @song.tags.any? %>
          <p class="mt-2 text-xs text-slate-500">Tags: <%= @song.tags.order(:name).pluck(:name).join(", ") %></p>
        <% end %>
      </div>
      <div class="flex items-center gap-3 text-sm">
        <%= link_to "Edit", edit_song_path(@song), class: "rounded-md border border-slate-300 px-3 py-2 text-slate-700 hover:border-slate-400 hover:text-slate-900" %>
        <%= button_to "Delete", song_path(@song), method: :delete, data: { turbo_confirm: "Delete this song?" }, class: "rounded-md border border-red-200 px-3 py-2 text-red-600 hover:border-red-300" %>
      </div>
    </div>
  </div>

  <div class="grid gap-4 md:grid-cols-2">
    <div class="rounded-lg border border-slate-200 bg-white p-5 shadow-sm">
      <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Details</h2>
      <dl class="mt-3 space-y-2 text-sm text-slate-700">
        <div class="flex justify-between">
          <dt class="text-slate-500">Key</dt>
          <dd><%= @song.key.presence || "—" %></dd>
        </div>
        <div class="flex justify-between">
          <dt class="text-slate-500">Tempo</dt>
          <dd><%= @song.tempo.presence || "—" %></dd>
        </div>
        <div class="flex justify-between">
          <dt class="text-slate-500">Duration</dt>
          <dd><%= @song.duration_seconds.present? ? Time.at(@song.duration_seconds).utc.strftime("%M:%S") : "—" %></dd>
        </div>
        <div class="flex justify-between">
          <dt class="text-slate-500">Singer</dt>
          <dd><%= @song.singer_display_name.presence || "—" %></dd>
        </div>
      </dl>
    </div>
    <div class="rounded-lg border border-slate-200 bg-white p-5 shadow-sm">
      <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Notes</h2>
      <p class="mt-3 text-sm text-slate-700"><%= @song.notes.presence || "No notes yet." %></p>
    </div>
  </div>

  <div class="rounded-lg border border-slate-200 bg-white p-5 shadow-sm">
    <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Setlists</h2>
    <% if @setlists.any? %>
      <% assigned = @song.setlist_songs.includes(:setlist).order(:position) %>
      <% if assigned.any? %>
        <div class="mt-3 space-y-2">
          <% assigned.each do |setlist_song| %>
            <div class="flex items-center justify-between rounded-md border border-slate-200 px-3 py-2 text-sm">
              <div>
                <p class="font-medium text-slate-900"><%= setlist_song.setlist.title %></p>
                <p class="text-xs text-slate-500">Position <%= setlist_song.position %></p>
              </div>
              <%= button_to "Remove", setlist_setlist_song_path(setlist_song.setlist, setlist_song), method: :delete, data: { turbo_confirm: "Remove this song from the setlist?" }, class: "rounded-md border border-red-200 px-3 py-1 text-xs font-semibold text-red-600 hover:border-red-300" %>
            </div>
          <% end %>
        </div>
      <% end %>

      <%= form_with url: setlist_setlist_songs_path(@setlists.first), method: :post, data: { controller: "setlist-assignment", setlist_assignment_target: "form", base_url: "/setlists/SETLIST_ID/setlist_songs" }, class: "mt-4 flex flex-col gap-3 sm:flex-row sm:items-end" do |form| %>
        <div class="w-full">
          <%= label_tag :setlist_id, "Add to setlist", class: "block text-sm font-medium text-slate-700" %>
          <%= select_tag :setlist_id, options_from_collection_for_select(@setlists, :id, :title), data: { setlist_assignment_target: "select", action: "setlist-assignment#updateAction" }, class: "mt-1 w-full rounded-md border border-slate-300 px-3 py-2 text-sm" %>
        </div>
        <%= hidden_field_tag :song_id, @song.id %>
        <%= button_tag "Add", type: "submit", class: "rounded-md bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800" %>
      <% end %>
    <% else %>
      <p class="mt-2 text-sm text-slate-600">No setlists yet. Create one to start assigning songs.</p>
    <% end %>
  </div>
</div>
