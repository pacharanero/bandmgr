<% content_for :title, "Band Chat" %>

<div class="flex flex-col gap-4 lg:grid lg:grid-cols-[220px_minmax(0,1fr)]">
  <aside class="rounded-lg border border-slate-200 bg-white p-4 shadow-sm">
    <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Channels</h2>
    <div class="mt-3 space-y-2 text-sm">
      <% @channels.each do |channel| %>
        <%= link_to channel.name, chat_band_path(@band, channel_id: channel.id), class: "block rounded-md px-3 py-2 #{channel == @channel ? "bg-slate-900 text-white" : "text-slate-700 hover:bg-slate-100"}" %>
      <% end %>
    </div>
  </aside>

  <section class="rounded-lg border border-slate-200 bg-white p-6 shadow-sm">
    <% if @channel %>
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-xl font-semibold text-slate-900"><%= @channel.name %></h1>
          <p class="text-sm text-slate-600">Chat scaffold is in place. Messaging UI comes next.</p>
        </div>
        <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-500">Read-only</span>
      </div>

      <div class="mt-4 rounded-md border border-slate-200 bg-slate-50 px-4 py-3 text-sm text-slate-600">
        <%= form_with url: chat_channels_path, method: :post, class: "flex flex-col gap-3 sm:flex-row sm:items-end" do %>
          <div class="w-full">
            <%= label_tag :recipient_id, "Start a direct message", class: "block text-sm font-medium text-slate-700" %>
            <%= select_tag :recipient_id, options_from_collection_for_select(@members, :id, :email_address), include_blank: "Select a member", class: "mt-1 w-full rounded-md border border-slate-300 px-3 py-2 text-sm" %>
            <%= hidden_field_tag :band_id, @band.id %>
          </div>
          <%= button_tag "Open DM", type: "submit", class: "rounded-md border border-slate-300 px-4 py-2 text-sm font-semibold text-slate-700 hover:border-slate-400 hover:text-slate-900" %>
        <% end %>
      </div>

      <div class="mt-6 space-y-3 text-sm text-slate-600">
        <% if @messages.any? %>
          <% @messages.each do |message| %>
            <% liked = message.chat_message_reactions.any? { |reaction| reaction.user_id == current_user.id && reaction.kind == "like" } %>
            <% like_count = message.chat_message_reactions.count { |reaction| reaction.kind == "like" } %>
            <div class="rounded-md border border-slate-200 px-3 py-2">
              <p class="text-xs text-slate-500"><%= message.user.email_address %> · <%= l(message.created_at, format: :short) %></p>
              <p class="mt-1 text-slate-700"><%= message.body %></p>
              <div class="mt-2 flex items-center gap-2 text-xs text-slate-500">
                <%= button_to toggle_chat_message_reaction_path(message_id: message.id), method: :post, class: "inline-flex items-center gap-1 rounded-md border border-slate-200 px-2 py-0.5 #{liked ? "text-emerald-600" : "text-slate-600"}" do %>
                  <span aria-hidden="true"><%= liked ? "♥" : "♡" %></span>
                  Like
                <% end %>
                <span><%= like_count %></span>
              </div>
            </div>
          <% end %>
        <% else %>
          <p>No messages yet.</p>
        <% end %>
      </div>

      <div class="mt-6 border-t border-slate-200 pt-4 text-sm text-slate-500">
        Messaging controls will appear here.
      </div>

      <div class="mt-4 rounded-md border border-slate-200 bg-slate-50 px-4 py-3 text-sm text-slate-600">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-slate-700">Browser notifications</p>
            <p class="text-xs text-slate-500">Prompt for notifications once messaging is live.</p>
          </div>
          <button type="button" class="rounded-md border border-slate-200 px-3 py-1 text-xs font-semibold text-slate-400" disabled>Enable</button>
        </div>
      </div>
    <% else %>
      <p class="text-sm text-slate-600">No channels yet.</p>
    <% end %>
  </section>
</div>
