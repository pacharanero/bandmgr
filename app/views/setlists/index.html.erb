<% content_for :title, "Setlists" %>

<div class="flex flex-col gap-4">
  <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h1 class="text-2xl font-semibold text-slate-900">Setlists</h1>
      <p class="text-sm text-slate-600">Build and manage running orders for gigs and rehearsals.</p>
    </div>
    <div class="flex flex-wrap items-center gap-3">
      <%= link_to "Import playlist", import_setlists_path, class: "inline-flex items-center rounded-md border border-slate-300 px-4 py-2 text-sm font-semibold text-slate-700 hover:border-slate-400 hover:text-slate-900" %>
      <%= link_to "New setlist", new_setlist_path, class: "inline-flex items-center rounded-md bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800" %>
    </div>
  </div>

  <% if @setlists.any? %>
    <div class="divide-y divide-slate-200 rounded-lg border border-slate-200 bg-white shadow-sm">
      <% @setlists.each do |setlist| %>
        <div class="flex flex-col gap-2 px-5 py-4 sm:flex-row sm:items-center sm:justify-between">
          <div>
            <p class="font-medium text-slate-900"><%= link_to setlist.title, setlist_path(setlist) %></p>
            <p class="text-sm text-slate-600"><%= setlist.band.name %> Â· <%= pluralize(setlist.setlist_songs.size, "song") %></p>
          </div>
          <div class="flex items-center gap-3 text-sm">
            <%= link_to "Edit", edit_setlist_path(setlist), class: "text-slate-700 hover:text-slate-900" %>
            <%= button_to "Delete", setlist_path(setlist), method: :delete, data: { turbo_confirm: "Delete this setlist?" }, class: "text-red-600 hover:text-red-700" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="rounded-lg border border-dashed border-slate-300 bg-white px-6 py-10 text-center text-sm text-slate-600">
      No setlists yet. Create your first running order.
    </div>
  <% end %>
</div>
