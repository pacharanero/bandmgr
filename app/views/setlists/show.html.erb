<% content_for :title, @setlist.title %>

<div class="flex flex-col gap-6">
  <div class="rounded-lg border border-slate-200 bg-white p-6 shadow-sm">
    <div class="flex flex-col gap-3 sm:flex-row sm:items-start sm:justify-between">
      <div>
        <h1 class="text-2xl font-semibold text-slate-900"><%= @setlist.title %></h1>
        <p class="mt-2 text-sm text-slate-600"><%= @setlist.band.name %></p>
        <p class="mt-1 text-sm text-slate-600"><%= @setlist.description.presence || "No description yet." %></p>
      </div>
      <div class="flex items-center gap-3 text-sm">
        <%= link_to "Edit", edit_setlist_path(@setlist), class: "rounded-md border border-slate-300 px-3 py-2 text-slate-700 hover:border-slate-400 hover:text-slate-900" %>
        <%= button_to "Delete", setlist_path(@setlist), method: :delete, data: { turbo_confirm: "Delete this setlist?" }, class: "rounded-md border border-red-200 px-3 py-2 text-red-600 hover:border-red-300" %>
      </div>
    </div>
  </div>

  <div class="rounded-lg border border-slate-200 bg-white p-6 shadow-sm">
    <div class="flex items-center justify-between">
      <h2 class="text-lg font-semibold text-slate-900">Songs</h2>
      <span class="text-sm text-slate-600"><%= pluralize(@setlist_songs.size, "song") %></span>
    </div>
    <div class="mt-4">
      <%= form_with url: setlist_setlist_songs_path(@setlist), method: :post, class: "flex flex-col gap-3 sm:flex-row sm:items-end" do |form| %>
        <div class="w-full">
          <%= label_tag :song_id, "Add song", class: "block text-sm font-medium text-slate-700" %>
          <%= select_tag :song_id, options_from_collection_for_select(@songs, :id, :title), class: "mt-1 w-full rounded-md border border-slate-300 px-3 py-2 text-sm" %>
        </div>
        <%= button_tag "Add to setlist", type: "submit", class: "rounded-md bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800" %>
      <% end %>
    </div>
    <% if @setlist_songs.any? %>
      <div class="mt-4 divide-y divide-slate-200" data-controller="setlist-sort" data-setlist-id="<%= @setlist.id %>">
        <% @setlist_songs.each_with_index do |setlist_song, index| %>
          <div class="flex items-center justify-between py-3 text-sm" data-setlist-sort-target="item" data-setlist-song-id="<%= setlist_song.id %>" draggable="true" data-action="dragstart->setlist-sort#dragStart dragend->setlist-sort#dragEnd dragover->setlist-sort#dragOver dragleave->setlist-sort#dragLeave drop->setlist-sort#drop">
            <div class="flex items-center gap-3">
              <span class="inline-flex cursor-move select-none items-center justify-center rounded-md border border-slate-200 px-2 py-1" aria-label="Drag to reorder">
                <span class="grid grid-cols-3 gap-0.5">
                  <span class="h-1 w-1 rounded-full bg-slate-400"></span>
                  <span class="h-1 w-1 rounded-full bg-slate-400"></span>
                  <span class="h-1 w-1 rounded-full bg-slate-400"></span>
                  <span class="h-1 w-1 rounded-full bg-slate-400"></span>
                  <span class="h-1 w-1 rounded-full bg-slate-400"></span>
                  <span class="h-1 w-1 rounded-full bg-slate-400"></span>
                </span>
              </span>
              <div>
                <p class="font-medium text-slate-900">
                  <span data-setlist-sort-target="number"><%= index + 1 %>.</span>
                  <%= setlist_song.song.title %>
                </p>
                <p class="text-slate-600"><%= setlist_song.song.artist.presence || "Unknown artist" %></p>
              </div>
            </div>
            <%= button_to "Remove", setlist_setlist_song_path(@setlist, setlist_song), method: :delete, data: { turbo_confirm: "Remove this song?" }, class: "text-xs text-red-600 hover:text-red-700" %>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="mt-3 text-sm text-slate-600">No songs yet. Import a playlist or add songs soon.</p>
    <% end %>
  </div>
</div>
