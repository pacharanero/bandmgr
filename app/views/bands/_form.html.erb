<%= form_with model: band, class: "space-y-4" do |form| %>
  <div>
    <%= form.label :name, class: "block text-sm font-medium text-slate-700" %>
    <%= form.text_field :name, class: "mt-1 w-full rounded-md border border-slate-300 px-3 py-2" %>
    <% band.errors.full_messages_for(:name).each do |message| %>
      <p class="mt-1 text-xs text-red-600"><%= message %></p>
    <% end %>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-slate-700" %>
    <%= form.text_area :description, rows: 4, class: "mt-1 w-full rounded-md border border-slate-300 px-3 py-2" %>
  </div>

  <div class="rounded-lg border border-slate-200 bg-slate-50 p-4">
    <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Calendar feeds</h3>
    <p class="mt-2 text-sm text-slate-600">Publish a public calendar for fans and a private feed for members.</p>
    <div class="mt-4 space-y-3">
      <div class="flex items-center justify-between gap-3">
        <div>
          <p class="text-sm font-medium text-slate-700">Public calendar</p>
          <p class="text-xs text-slate-500">Default includes gigs only.</p>
        </div>
        <%= form.check_box :public_calendar_enabled, class: "h-4 w-4 rounded border-slate-300 text-slate-900" %>
      </div>
      <div class="flex items-center justify-between gap-3">
        <div>
          <p class="text-sm font-medium text-slate-700">Include rehearsals</p>
          <p class="text-xs text-slate-500">Adds rehearsal dates to the public feed.</p>
        </div>
        <%= form.check_box :public_calendar_include_rehearsals, class: "h-4 w-4 rounded border-slate-300 text-slate-900" %>
      </div>
    </div>

    <% if band.persisted? %>
      <div class="mt-4 border-t border-slate-200 pt-4">
        <h4 class="text-xs font-semibold uppercase tracking-wide text-slate-400">Share links</h4>
        <div class="mt-3 space-y-2 text-xs text-slate-600">
          <div>
            <span class="font-semibold text-slate-700">Private:</span>
            <span class="font-mono"><%= private_band_calendar_url(band_id: band.id, token: band.private_calendar_token) %></span>
          </div>
          <div>
            <span class="font-semibold text-slate-700">Public:</span>
            <% if band.public_calendar_enabled? %>
              <span class="font-mono"><%= public_band_calendar_url(band_id: band.id, token: band.public_calendar_token) %></span>
            <% else %>
              <span class="text-slate-400">Enable public calendar to generate a link.</span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="flex items-center justify-end gap-3">
    <%= link_to "Cancel", bands_path, class: "text-sm text-slate-600 hover:text-slate-900" %>
    <%= form.submit class: "rounded-md bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800" %>
  </div>
<% end %>
