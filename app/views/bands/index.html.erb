<% content_for :title, "Bands" %>

<div class="flex flex-col gap-4">
  <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h1 class="text-2xl font-semibold text-slate-900">Bands</h1>
      <p class="text-sm text-slate-600">Manage bands in your account.</p>
    </div>
    <%= link_to "New band", new_band_path, class: "inline-flex items-center rounded-md bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800" %>
  </div>

  <% if @bands.any? %>
    <div class="grid gap-4 md:grid-cols-2">
      <% @bands.each do |band| %>
        <div class="rounded-lg border border-slate-200 bg-white p-5 shadow-sm">
          <h2 class="text-lg font-semibold text-slate-900"><%= link_to band.name, band_path(band) %></h2>
          <p class="mt-2 text-sm text-slate-600"><%= band.description.presence || "No description yet." %></p>
          <div class="mt-4 flex items-center gap-3 text-sm">
            <%= link_to "View", band_path(band), class: "text-slate-700 hover:text-slate-900" %>
            <%= link_to "Edit", edit_band_path(band), class: "text-slate-700 hover:text-slate-900" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="rounded-lg border border-dashed border-slate-300 bg-white px-6 py-10 text-center text-sm text-slate-600">
      No bands yet. Create your first band to get started.
    </div>
  <% end %>
</div>
