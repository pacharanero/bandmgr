<% content_for :title, @band.name %>

<div class="flex flex-col gap-6">
  <div class="rounded-lg border border-slate-200 bg-white p-6 shadow-sm" data-controller="copy">
    <div class="flex flex-col gap-3 sm:flex-row sm:items-start sm:justify-between">
      <div>
        <h1 class="text-2xl font-semibold text-slate-900"><%= @band.name %></h1>
        <p class="mt-2 text-sm text-slate-600"><%= @band.description.presence || "No description yet." %></p>
        <% if @default_band&.id == @band.id %>
          <p class="mt-2 inline-flex items-center gap-2 rounded-full bg-emerald-100 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-emerald-700">Default band</p>
        <% elsif current_account_membership %>
          <%= button_to "Set as default", set_default_band_path(@band), method: :post, class: "mt-2 inline-flex items-center gap-2 rounded-full border border-slate-200 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-slate-700 hover:border-slate-300" %>
        <% end %>
      </div>
      <div class="flex items-center gap-3 text-sm">
        <%= link_to "Edit", edit_band_path(@band), class: "rounded-md border border-slate-300 px-3 py-2 text-slate-700 hover:border-slate-400 hover:text-slate-900" %>
        <%= button_to "Delete", band_path(@band), method: :delete, data: { turbo_confirm: "Delete this band?" }, class: "rounded-md border border-red-200 px-3 py-2 text-red-600 hover:border-red-300" %>
      </div>
    </div>
  </div>

  <div class="rounded-lg border border-slate-200 bg-white p-6 shadow-sm">
    <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
      <div>
        <h2 class="text-lg font-semibold text-slate-900">Members</h2>
        <p class="text-sm text-slate-600">Manage who has access to this band.</p>
      </div>
    </div>

    <div class="mt-6 space-y-3">
      <% @memberships.each do |membership| %>
        <div class="flex flex-col gap-2 rounded-md border border-slate-200 px-4 py-3 text-sm sm:flex-row sm:items-center sm:justify-between">
          <div>
            <p class="font-medium text-slate-900"><%= membership.recipient_email %></p>
            <p class="text-xs uppercase tracking-wide text-slate-500">
              <%= membership.role %>
              <% unless membership.accepted? %>
                <span class="ml-2 rounded bg-amber-100 px-2 py-0.5 text-[10px] font-semibold uppercase text-amber-700">Pending invite</span>
              <% end %>
            </p>
          </div>
          <% if policy(membership).update? %>
            <div class="flex flex-wrap items-center gap-2">
              <%= form_with model: [@band, membership], method: :patch, class: "flex items-center gap-2" do |form| %>
                <%= form.select :role, BandMembership.roles.keys, {}, class: "rounded-md border border-slate-300 px-2 py-1 text-sm" %>
                <%= form.submit "Update", class: "rounded-md border border-slate-300 px-3 py-1 text-xs text-slate-700 hover:border-slate-400" %>
              <% end %>
              <% unless membership.accepted? %>
                <%= button_to "Resend invite", resend_invite_band_band_membership_path(@band, membership), method: :post, class: "rounded-md border border-amber-200 px-3 py-1 text-xs text-amber-700 hover:border-amber-300" %>
              <% end %>
              <%= button_to "Remove", band_band_membership_path(@band, membership), method: :delete, data: { turbo_confirm: "Remove this member?" }, class: "rounded-md border border-red-200 px-3 py-1 text-xs text-red-600 hover:border-red-300" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <% if policy(@band_membership).create? %>
      <div class="mt-8 border-t border-slate-200 pt-6">
        <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Add member</h3>
        <%= form_with model: [@band, @band_membership], class: "mt-4 grid gap-3 sm:grid-cols-3 sm:items-end" do |form| %>
          <div class="sm:col-span-2">
            <%= form.label :email_address, "Member email", class: "block text-sm font-medium text-slate-700" %>
            <%= form.email_field :email_address, class: "mt-1 w-full rounded-md border border-slate-300 px-3 py-2" %>
          </div>
          <div>
            <%= form.label :role, class: "block text-sm font-medium text-slate-700" %>
            <%= form.select :role, BandMembership.roles.keys, {}, class: "mt-1 w-full rounded-md border border-slate-300 px-3 py-2" %>
          </div>
          <% if @band_membership.errors.any? %>
            <div class="sm:col-span-3 rounded-md border border-red-200 bg-red-50 px-3 py-2 text-sm text-red-700">
              <%= @band_membership.errors.full_messages.to_sentence %>
            </div>
          <% end %>
          <div class="sm:col-span-3">
            <%= form.submit "Add member", class: "rounded-md bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="rounded-lg border border-slate-200 bg-white p-6 shadow-sm">
    <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
      <div>
        <h2 class="text-lg font-semibold text-slate-900">Calendar feeds</h2>
        <p class="text-sm text-slate-600">Share calendars for members and fans.</p>
      </div>
      <%= link_to "Band Calendar settings", edit_band_path(@band), class: "rounded-md border border-slate-300 px-3 py-2 text-sm text-slate-700 hover:border-slate-400 hover:text-slate-900" %>
    </div>

    <div class="mt-4 space-y-2 text-xs text-slate-600">
      <div>
        <span class="font-semibold text-slate-700">Private:</span>
        <span class="font-mono" id="private-calendar-link"><%= private_band_calendar_url(band_id: @band.id, token: @band.private_calendar_token) %></span>
        <button type="button" class="ml-2 inline-flex items-center gap-1 text-slate-500 hover:text-slate-700" data-copy-target="#private-calendar-link" data-action="click->copy#copy" aria-label="Copy private calendar link">
          <span class="inline-flex h-4 w-4 items-center justify-center rounded border border-slate-300 text-[10px] font-semibold" data-copy-icon>⧉</span>
          Copy
        </button>
      </div>
      <div>
        <span class="font-semibold text-slate-700">Public:</span>
        <% if @band.public_calendar_enabled? %>
          <span class="font-mono" id="public-calendar-link"><%= public_band_calendar_url(band_id: @band.id, token: @band.public_calendar_token) %></span>
          <button type="button" class="ml-2 inline-flex items-center gap-1 text-slate-500 hover:text-slate-700" data-copy-target="#public-calendar-link" data-action="click->copy#copy" aria-label="Copy public calendar link">
            <span class="inline-flex h-4 w-4 items-center justify-center rounded border border-slate-300 text-[10px] font-semibold" data-copy-icon>⧉</span>
            Copy
          </button>
        <% else %>
          <span class="text-slate-400">Enable public calendar in settings to generate a link.</span>
        <% end %>
      </div>
    </div>
  </div>
</div>
