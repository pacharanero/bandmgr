<% content_for :title, "Events" %>

<div class="flex flex-col gap-4">
  <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h1 class="text-2xl font-semibold text-slate-900">Events</h1>
      <p class="text-sm text-slate-600">Track gigs, rehearsals, and key dates.</p>
    </div>
    <div class="flex flex-wrap items-center gap-2">
      <%= link_to "Calendar view", calendar_events_path, class: "inline-flex items-center rounded-md border border-slate-300 px-4 py-2 text-sm font-semibold text-slate-700 hover:border-slate-400 hover:text-slate-900" %>
      <%= link_to "New event", new_event_path, class: "inline-flex items-center rounded-md bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800" %>
    </div>
  </div>

  <% if @events.any? %>
    <div class="divide-y divide-slate-200 rounded-lg border border-slate-200 bg-white shadow-sm">
      <% @events.each do |event| %>
        <div class="flex flex-col gap-2 px-5 py-4 sm:flex-row sm:items-center sm:justify-between">
          <div>
            <p class="font-medium text-slate-900"><%= link_to "#{event.kind.titleize} â€” #{event.band.name}", event_path(event) %></p>
            <p class="text-sm text-slate-600"><%= event.starts_at.strftime("%b %d, %Y %I:%M %p") %> Â· <%= event.venue.presence || "No venue" %></p>
          </div>
          <div class="flex items-center gap-3 text-sm">
            <%= link_to "Edit", edit_event_path(event), class: "text-slate-700 hover:text-slate-900" %>
            <%= button_to "Delete", event_path(event), method: :delete, data: { turbo_confirm: "Delete this event?" }, class: "text-red-600 hover:text-red-700" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="rounded-lg border border-dashed border-slate-300 bg-white px-6 py-10 text-center text-sm text-slate-600">
      No events yet. Create your first gig or rehearsal.
    </div>
  <% end %>
</div>
