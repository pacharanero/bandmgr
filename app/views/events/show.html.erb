<% content_for :title, "Event" %>

<div class="flex flex-col gap-6">
  <div class="rounded-lg border border-slate-200 bg-white p-6 shadow-sm">
    <div class="flex flex-col gap-3 sm:flex-row sm:items-start sm:justify-between">
      <div>
        <h1 class="text-2xl font-semibold text-slate-900"><%= @event.kind.titleize %> â€” <%= @event.band.name %></h1>
        <p class="mt-2 text-sm text-slate-600"><%= @event.starts_at.strftime("%b %d, %Y %I:%M %p") %></p>
        <p class="mt-1 text-sm text-slate-600"><%= @event.venue.presence || "No venue" %></p>
      </div>
      <div class="flex items-center gap-3 text-sm">
        <%= link_to "Edit", edit_event_path(@event), class: "rounded-md border border-slate-300 px-3 py-2 text-slate-700 hover:border-slate-400 hover:text-slate-900" %>
        <%= button_to "Delete", event_path(@event), method: :delete, data: { turbo_confirm: "Delete this event?" }, class: "rounded-md border border-red-200 px-3 py-2 text-red-600 hover:border-red-300" %>
      </div>
    </div>
  </div>

  <div class="rounded-lg border border-slate-200 bg-white p-5 shadow-sm">
    <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Notes</h2>
    <p class="mt-3 text-sm text-slate-700"><%= @event.notes.presence || "No notes yet." %></p>
  </div>

  <div class="rounded-lg border border-slate-200 bg-white p-5 shadow-sm">
    <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Attachments</h2>
    <% if @event.attachments.attached? %>
      <ul class="mt-3 space-y-2 text-sm">
        <% @event.attachments.each do |attachment| %>
          <li>
            <%= link_to attachment.filename.to_s, rails_blob_path(attachment, disposition: "attachment"), class: "text-slate-700 underline hover:text-slate-900" %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="mt-3 text-sm text-slate-600">No attachments yet.</p>
    <% end %>
  </div>
</div>
